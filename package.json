{
  "name": "ohua-backend",
  "version": "1.0.0",
  "description": "LINE-WeChat Bidirectional Translation Relay System",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "echo 'No build step required for Node.js app'",
    "azure:deploy": "npm ci && npm test",
    "azure:logs": "az webapp log tail --name ohua-backend --resource-group rg-ohua-backend",
    "azure:restart": "az webapp restart --name ohua-backend --resource-group rg-ohua-backend",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.1",
    "@line/bot-sdk": "^10.3.0",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ngrok": "^5.0.0-beta.2",
    "openai": "^6.1.0",
    "wechat-api": "^1.35.1",
    "winston": "^3.18.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
